<div class="container">
  <div class="flex items-center justify-center h-screen">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
      <%= form_with(model: item, class: "w-full") do |form| %>
        <% if item.errors.any? %>
          <div style="color: red" class="mb-4">
            <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>
            <ul>
              <% item.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="mb-4">
          <%= form.label :price, class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :price, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="mb-4">
          <%= form.label :content, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :content, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="mb-4">
          <%= form.label :category, class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :category, @category, {}, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="mb-4">
          <%= form.label :width, class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :width, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="mb-4">
          <%= form.label :height, class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :height, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="mb-4">
          <%= form.label :length, class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :length, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="mb-4">
          <%= form.label :depth, class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :depth, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="mb-4">
          <%= form.label :matter, class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :matter, @matter, {}, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="mb-4">
          <%= form.label :century, class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :century, @century, {}, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="mb-4">
          <%= form.label :style, class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :style, @style, {}, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="mb-4">
          <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :status, @status, {}, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.submit class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
